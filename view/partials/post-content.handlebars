<div class="posts">
  <h4><a href="/post/{{id}}">{{title}}</a></h4>
  <div id="post_text">
    {{post_text}}
  </div>
  <div class="bottom">
    <p>{{user.username}} | {{format_date created_at}}</p>
  </div>
  <br>
  <form id="comment-form">
    <input type="text" id="comment-text" placeholder="Add comment here">
    <span id="post-id">{{post.id}}</span>
    <button id="comment-btn">Add Comment</button>
  </form>
  {{#each comments}}
  {{> comment}}
  {{/each}}
</div>

<script src="/public/js/comment.js"></script>