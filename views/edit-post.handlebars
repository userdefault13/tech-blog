<section>
<h2>Edit Post</h2>
<form id="edit-post-form">
    <div>
        <label for="post-title">Post Title</label>
        <input class="input" id="post-title" type="text" value="{{post.title}}">
    </div>
    <div>
        <label for="post-text">Post Content</label>
        <input class="input" id="post-text" type="text" value="{{post.post_text}}">
    </div>
     <div class="date-id">
       created by {{user.username}} on {{format_date created_at}} -
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="button" class="delete-button">Delete</button>
    <button type="button" id="save-button">Save</button>
</form>
</section>
{{> comment post.comments}}


<script src="/js/edit-and-delete-post.js"></script>
<script src="/js/comment.js"></script>